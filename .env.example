# Ladybug Baileys Environment Configuration

# General Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# API Configuration
API_KEY=your-secret-api-key-here
ENABLE_CORS=true
ENABLE_RATE_LIMIT=true
ENABLE_COMPRESSION=true
ENABLE_SECURITY=true

# Storage Configuration
STORAGE_TYPE=memory
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# File Storage (if using file storage)
STORAGE_PATH=./storage
STORAGE_ENCRYPTION=false

# Feature Toggles
ENABLE_SCHEDULING=true
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=false
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_PLUGINS=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_ALERTS=true
ALERT_WEBHOOK_URL=

# Authentication
AUTH_PATH=./auth
ENABLE_SESSION_BACKUP=true
BACKUP_INTERVAL=3600000

# Logging
LOG_FILE=./logs/ladybug.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Security
ENABLE_ENCRYPTION=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
AUDIT_LOGGING=true

# WhatsApp Connection
PRINT_QR_IN_TERMINAL=true
SYNC_FULL_HISTORY=false
BROWSER_NAME=Ubuntu
MARK_ONLINE_ON_CONNECT=true

# Performance
CONNECTION_POOLING=false
MAX_CONNECTIONS=5
CACHING=true
COMPRESSION=true
KEEP_ALIVE=true

# Development
DEBUG_MODE=false
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true

# Production Overrides (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_SECURITY=true
# ENABLE_ENCRYPTION=true
# RATE_LIMIT_MAX=50
# ENABLE_METRICS=true
# ENABLE_ALERTS=true