{
  "name": "@ladybug/baileys",
  "version": "1.0.0",
  "description": "Enhanced WhatsApp Web API library with advanced features, better performance, and production-ready deployment",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node lib/index.js",
    "start:prod": "NODE_ENV=production node lib/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "docs": "typedoc src/index.ts",
    "docs:serve": "http-server docs -p 8080",
    "prepublishOnly": "npm run build && npm run test",
    "docker:build": "docker build -t ladybug-baileys .",
    "docker:run": "docker run -p 3000:3000 ladybug-baileys",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "example:basic": "ts-node examples/basic-usage.ts",
    "example:server": "ts-node examples/server.ts",
    "example:complete": "ts-node examples/complete-example.ts",
    "clean": "rimraf lib coverage docs",
    "pre-commit": "npm run lint && npm run test",
    "release": "npm run clean && npm run build && npm publish"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "api",
    "websocket",
    "typescript",
    "nodejs",
    "messaging",
    "chatbot",
    "business",
    "enterprise"
  ],
  "author": "Ladybug Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ladybug/baileys.git"
  },
  "bugs": {
    "url": "https://github.com/ladybug/baileys/issues"
  },
  "homepage": "https://ladybug-baileys.github.io",
  "dependencies": {
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "ws": "^8.14.2",
    "pino": "^8.16.2",
    "node-cache": "^5.1.2",
    "ioredis": "^5.3.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3",
    "sharp": "^0.33.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.8",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.4",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "ffmpeg-static": "^5.2.0",
    "graphql": "^16.8.1",
    "apollo-server-express": "^3.12.1",
    "type-graphql": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "bull": "^4.12.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "lib/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}